generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
  output          = "../generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int      @id @default(autoincrement())
  stravaAthleteId BigInt   @unique
  username        String?
  firstname       String?
  lastname        String?
  profile         String?
  createdAt       DateTime @default(now())

  activities      Activity[]
  tiles           TileOwnership[]
  historyCaptured TileHistory[] @relation("TileHistoryNewUser")
  historyLost     TileHistory[] @relation("TileHistoryPrevUser")
}

model Activity {
  id            Int      @id @default(autoincrement())
  stravaId      BigInt   @unique
  userId        Int
  name          String?
  distanceM     Float?
  movingTimeS   Int?
  startLat      Float?
  startLng      Float?
  endLat        Float?
  endLng        Float?
  polyline      String?
  captured      Boolean  @default(false) // true if start-end <=200m rule passes
  createdAt     DateTime @default(now())

  user          User     @relation(fields: [userId], references: [id])
}

model TileOwnership {
  id        Int      @id @default(autoincrement())
  userId    Int
  tileId    String   // H3 tile id or grid tile string
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])

  @@unique([tileId]) // only one owner per tile
}

model TileHistory {
  id           Int      @id @default(autoincrement())
  tileId       String
  previousUser Int?     // nullable, who lost the tile if any
  newUser      Int      // who captured the tile
  activityId   Int?     // optional: which activity caused capture
  createdAt    DateTime @default(now())

  // optional relations
  userNew      User?    @relation("TileHistoryNewUser", fields: [newUser], references: [id])
  userPrev     User?    @relation("TileHistoryPrevUser", fields: [previousUser], references: [id])

  @@index([tileId])
}
